

    <section class="hero py-4">
        <div class="container flex  mx-auto items-center justify-between">
            <div class="w-1/2">
                <h3 class="text-lg font-bold"><em>Are you hungry?</em></h3>
                <h1 class="text-6xl font-bold "> Don't Wait !</h1>
                <button class="btn my-4 px-4 py-2 rounded-full text-bold"><a href="#">Order Now</a></button>
               
            </div>
            <div class="w-1/2"> <img src="/img/hero-pizza.png">

            </div>
        </div>
    </section>


    <section class="menu container mx-auto ">

        <div>
            <h2 class='text-xl font-bold mb-8'>All Pizzas</h2>
        </div>

        <div class="grid grid-cols-4 col-gap-12 row-gap-16">    



            <% Pizzas.forEach(function(pizza){ %>

            <div class="w-64">
                <div> 
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="">
                </div>
                <div class="text-center">
                    <h2 class="py-2 text-xl ">  </h2>
                    <span class="small py-1 mb-3 px-4 uppercase text-xs rounded-full font-bold "><%= pizza.size %></span>

                    <div class="flex  items-center justify-around mt-6">
                        <span class="font-bold">RS. <%= pizza.price %></span>

                        <!-- stringy is used to convert the object to string,, JSON.stringify bascially used to convert the string--> 
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add_to_cart py-1 px-6 rounded-full justify-between flex font-bold items-center">
                            <span>+</span>            
                            <span class=" ml-6">Add</span>
                        </button> 
                    </div>
                </div>
            </div>
            <% }) %>
                
                
            
        </div>

</section>
