<section class="status">
    <div class="container mx-auto ">
        <div class="status-box mx-auto w-full lg:w-2/3 bg-dark">
        <div class="flex items-center justify-between mb-12">
            <h1 class="text-sm md:text-xl font-bold">Track delivery status</h1>
            <h6 class="bg-white px-4 rounded-full text-sm text-green-600"><%= order._id%></h6>
            <input id="hidden-input"  type="hidden" value="<%= JSON.stringify(order) %>">

        </div>
        <ul>
            <li class="status_line text:sm md:text-xl pb-16 " data-status="order_placed">
                <span>Ordered Placed</span>
                
            </li>
            <li class="status_line text-sm md:text-xl pb-16 " data-status="confirmed"><span>Ordered Conformation</span></li>
            <li class="status_line text-sm md:text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
            <li class="status_line text-sm md:text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
            <li class="status_line text-sm md:text-xl " data-status="completed"><span>Complete</span></li>

        </ul>
        
        </div>
    </div>

</section>





































